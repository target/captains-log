{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "ES2017",
    "baseUrl": "./src",
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ]
}